{
  "name": "rl4d2l-stats",
  "version": "0.1.0",
  "description": "RL4D2 stats processor and static site generator",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:template",
    "build:prod": "npm run build:js && npm run build:css && npm run rev && npm run build:template -- -p",
    "build:js": "rollup -c",
    "build:css": "node build-css.js",
    "build:template": "node index.js -t",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "npm run build:js -- -w",
    "watch:css": "nodemon -e css --watch src/css -x \"npm run build:css\"",
    "watch:template": "nodemon -e pug --watch src/templates -x \"npm run build:template\"",
    "rev": "node rev.js"
  },
  "author": "devilesk",
  "license": "ISC",
  "dependencies": {
    "commander": "^2.20.0",
    "distributions": "^2.0.0",
    "dotenv": "^8.0.0",
    "mysql": "^2.17.1",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "bluebird": "^3.5.5",
    "chart.js": "^2.8.0",
    "clean-css": "^4.2.1",
    "deep-object-diff": "^1.1.0",
    "eventemitter3": "^4.0.0",
    "md5": "^2.2.1",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "purgecss": "^1.3.0",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1"
  }
}
